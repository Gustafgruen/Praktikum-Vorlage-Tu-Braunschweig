% ------- SI Einheiten -------------------
% Basiseinheiten
\newcommand{\kg}{\ensuremath{\,\text{kg}}} % Kilogramm
\newcommand{\m}{\ensuremath{\,\text{m}}}   % Meter
\newcommand{\s}{\ensuremath{\,\text{s}}}   % Sekunde
\newcommand{\A}{\ensuremath{\,\text{A}}}   % Ampere
\newcommand{\K}{\ensuremath{\,\text{K}}}   % Kelvin
\newcommand{\mol}{\ensuremath{\,\text{mol}}} % Mol
\newcommand{\cd}{\ensuremath{\,\text{cd}}} % Candela

% Häufig genutzte einheiten
\newcommand{\J}{\ensuremath{\,\text{J}}} % Joule
\newcommand{\Ju}{\ensuremath{\,\frac{\text{kg m}^2}{\text{s}^2}}} % Joule in SI-Basiseinheiten
\newcommand{\kJ}{\ensuremath{\,\text{kJ}}} % Joule
\newcommand{\kJu}{\ensuremath{\cdot10^3\,\frac{\text{kg m}^2}{\text{s}^2}}} % Joule in SI-Basiseinheiten

\newcommand{\N}{\ensuremath{\,\text{N}}} % Newton
\newcommand{\Nu}{\ensuremath{\,\frac{\text{kg m}}{\text{s}^2}}} % Newton in SI-Basiseinheiten

\newcommand{\W}{\ensuremath{\,\text{W}}} % Watt
\newcommand{\Wu}{\ensuremath{\,\frac{\text{kg m}^2}{\text{s}^3}}} % Watt in SI-Basiseinheiten (J/s)

\newcommand{\Pa}{\ensuremath{\,\text{Pa}}} % Pascal
\newcommand{\Pau}{\ensuremath{\,\frac{\text{kg}}{\text{m s}^2}}} % Pascal in SI-Basiseinheiten (N/m^2)

\newcommand{\barr}{\ensuremath{\,\text{bar}}} % Bar 
\newcommand{\baru}{\ensuremath{\cdot10^5\, \frac{\text{kg}}{\text{m s}^2}}} % Bar in SI-Basiseinheiten (1 bar = 10^5 Pa)

\newcommand{\V}{\ensuremath{\,\text{V}}} % Volt
\newcommand{\Vu}{\ensuremath{\,\frac{\text{kg m}^2}{\text{A s}^3}}} % Volt in SI-Basiseinheiten (J/C = J/(A s))
\newcommand{\mV}{\ensuremath{\,\text{mV}}}

\newcommand{\Ohm}{\ensuremath{\,\Omega}} % Ohm
\newcommand{\Ohmu}{\ensuremath{\,\frac{\text{kg m}^2}{\text{A}^2 \text{s}^3}}} % Ohm in SI-Basiseinheiten (V/A)

\newcommand{\Hz}{\ensuremath{\,\text{Hz}}} % Hertz
\newcommand{\Hzu}{\ensuremath{\,\frac{1}{\text{s}}}} % Hertz in SI-Basiseinheiten (1/s)


\newcommand{\C}{\ensuremath{\,^\circ\text{C}}} % Grad Celsius (keine SI-Basiseinheit, aber wichtig)
\newcommand{\liter}{\ensuremath{\,\text{L}}} % Liter 
\newcommand{\mL}{\ensuremath{\,\text{ml}}}
\newcommand{\Lu}{\ensuremath{\cdot10^{-3}\,\text{m}^3}} % Liter in SI-Basiseinheiten
\newcommand{\g}{\ensuremath{\,\text{g}}}   % Gramm (keine SI-Basiseinheit, aber abgeleitet von kg)
\newcommand{\gu}{\ensuremath{\cdot10^{-3}\,\text{kg}}} % Gramm in SI-Basiseinheiten
\newcommand{\mg}{\ensuremath{\,\text{mg}}}   % Gramm (keine SI-Basiseinheit, aber abgeleitet von kg)
\newcommand{\mgu}{\ensuremath{\cdot10^{-6}\,\text{kg}}} % Gramm in SI-Basiseinheiten
\newcommand{\cm}{\ensuremath{\,\text{cm}}} % Zentimeter
\newcommand{\cmu}{\ensuremath{\cdot10^{-2}\,\text{m}}} % Zentimeter in SI-Basiseinheiten
\newcommand{\mm}{\ensuremath{\,\text{mm}}} % Millimeter
\newcommand{\mmu}{\ensuremath{\cdot10^{-3}\,\text{m}}} % Millimeter in SI-Basiseinheiten
\newcommand{\nm}{\ensuremath{\,\text{nm}}} % Nano Meter
\newcommand{\nmu}{\ensuremath{\cdot10^{-9}\,\text{m}}} % Nano in SI-Basiseinheiten

\newcommand{\ms}{\ensuremath{\,\frac{\text{m}}{\text{s}}}} % Meter pro Sekunde 

\newcommand{\mss}{\ensuremath{\,\frac{\text{m}}{\text{s}^2}}} % Meter pro Sekunde Quadrat (Beschleunigung)


% Operationen
\newcommand{\abl}[2]{\ensuremath{\frac{\text{d}\,#1}{\text{d}\,#2}}} % Ableitung

\newcommand{\°}{\ensuremath{^\circ}} % ° Symbol

\newcommand{\e}[1]{\ensuremath{\cdot10^{#1}}} % e schreibweise